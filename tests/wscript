# -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-
from waflib import Utils

top = '..'

def build(bld):
    bld.objects(
        target='tests-main',
        source='main.cpp',
        use='libndn-nac')

    config_path = 'TMP_TESTS_PATH="%s"' % bld.bldnode.make_node('tmp-files')

    bld.program(
        target='../unit-tests',
        name='unit-tests',
        source=bld.path.ant_glob(['unit-tests/**/*.cpp']),
        use='tests-main',
        includes=['.'],
        install_path=None,
        defines=[config_path])
